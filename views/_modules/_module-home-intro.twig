<div class="container _module-home-intro"
        {% if post.get_field('intro-bg_image') %}
            style="background-image: url({{ post.get_field('intro-bg_image') }})"
        {% endif %}
        >
    <div class="container-inner">

        {% if post.get_field('intro-title') %}
            <h2 class="intro-title">
                {{ post.get_field('intro-title') }}
            </h2>
        {% endif %}

        {% if post.get_field('intro-content') %}
            <div class="intro-content">
                {{ post.get_field('intro-content') }}
            </div>
        {% endif %}

    </div>
</div>