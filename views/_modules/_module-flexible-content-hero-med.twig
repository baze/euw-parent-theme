<div class="{{ post.classes | join(' ') }} {{ content.acf_fc_layout }}">

    <div class="{{ content.acf_fc_layout }}-row">

        {% for item in content[content.acf_fc_layout ~ '-row'] %}

            <article class="{{ content.acf_fc_layout }}">
                <h2 class="{{ content.acf_fc_layout }}-headline">
                    {{ item[content.acf_fc_layout ~ '-headline'] }}
                </h2>

                {% if item[content.acf_fc_layout ~ '-img'] %}
                    <div class="{{ content.acf_fc_layout }}-img">
                        <img src="{{ TimberImage(item[content.acf_fc_layout ~ '-img']) }}"
                             alt="{{ TimberImage(item[content.acf_fc_layout ~ '-img']).caption }}"/>
                    </div>
                {% endif %}

                {% if item[content.acf_fc_layout ~ '-txt'] %}
                    <div class="{{ content.acf_fc_layout }}-txt">
                        {{ item[content.acf_fc_layout ~ '-txt'] }}
                    </div>
                {% endif %}

                {% if item[content.acf_fc_layout ~ '-link'] %}
                    <a class="btn" href="{{ item[content.acf_fc_layout ~ '-link'] }}">
                        {{ _e('Mehr erfahren') }}
                    </a>
                {% endif %}
            </article>

        {% endfor %}

    </div>

</div>